#
# EditorConfig, http://editorconfig.org/.
#

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,scss,css}]
indent_size = 2

[package.json]
indent_size = 2

[composer.json]
indent_size = 2

[*.{py,md,php}]
indent_size = 4

